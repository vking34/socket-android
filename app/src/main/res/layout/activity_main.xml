<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.vking34.gas.MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map"
            android:id="@+id/btnMap" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintHorizontal_bias="0.028"
            app:layout_constraintVertical_bias="0.017"/>
    <Button
            android:text="INITIALIZE A SOCKET CONNECT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_socket" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnMap" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.057" app:layout_constraintVertical_bias="0.06"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            tools:layout_editor_absoluteY="209dp" tools:layout_editor_absoluteX="16dp" android:id="@+id/editText"
            android:hint="Phone Number"/>

</android.support.constraint.ConstraintLayout>
